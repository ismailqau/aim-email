# Copy this file to .env and configure with your actual values
# DO NOT commit .env file to version control

# =================================================================
# APPLICATION CONFIGURATION
# =================================================================
NODE_ENV=development
PORT=3501
FRONTEND_URL=http://localhost:3500

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# PostgreSQL Database URL
DATABASE_URL="postgresql://postgres:password@localhost:5432/email_marketing_system"

# Individual database components (for Docker Compose)
DATABASE_NAME=email_marketing_system
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# =================================================================
# REDIS CONFIGURATION
# =================================================================
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =================================================================
# AUTHENTICATION & SECURITY
# =================================================================
# JWT Secret - CHANGE THIS IN PRODUCTION!
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# NextAuth (for frontend authentication)
NEXTAUTH_URL="http://localhost:3500"
NEXTAUTH_SECRET="your-nextauth-secret-key"

# =================================================================
# EMAIL SERVICE CONFIGURATION (REQUIRED)
# =================================================================
# SendGrid API Configuration
SENDGRID_API_KEY="SG.your-actual-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"
SENDGRID_FROM_NAME="AI Email Marketing System"

# Alternative SMTP Configuration (if not using SendGrid)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false

# =================================================================
# AI CONFIGURATION (REQUIRED)
# =================================================================
# Google Gemini AI API Key
GEMINI_API_KEY="your-actual-gemini-api-key"

# Alternative AI providers (if needed)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# =================================================================
# NEXT.JS FRONTEND CONFIGURATION
# =================================================================
NEXT_PUBLIC_API_URL="http://localhost:3501/api/v1"
NEXT_PUBLIC_APP_URL="http://localhost:3500"
NEXT_PUBLIC_COMPANY_NAME="AI Email Marketing System"

# =================================================================
# FILE UPLOAD CONFIGURATION
# =================================================================
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=10485760
# Allowed file types for CSV uploads
ALLOWED_FILE_TYPES="text/csv,application/vnd.ms-excel"

# =================================================================
# RATE LIMITING
# =================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================================================================
# MONITORING & LOGGING
# =================================================================
LOG_LEVEL=info
LOG_FORMAT=combined

# =================================================================
# DOCKER CONFIGURATION
# =================================================================
# Ports for Docker Compose
WEB_PORT=3500
API_PORT=3501
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =================================================================
# PRODUCTION CONFIGURATION
# =================================================================
# SSL Certificate paths (for production)
SSL_CERT_PATH=
SSL_KEY_PATH=

# Domain configuration
DOMAIN=localhost
SUBDOMAIN=

# =================================================================
# THIRD-PARTY INTEGRATIONS
# =================================================================
# Analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Error Tracking
SENTRY_DSN=

# Social Authentication (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# =================================================================
# DEVELOPMENT CONFIGURATION
# =================================================================
# Development-specific settings
DEV_EMAIL_OVERRIDE=
SKIP_EMAIL_VERIFICATION=false
MOCK_AI_RESPONSES=false

# =================================================================
# BACKUP CONFIGURATION
# =================================================================
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# =================================================================
# SECURITY CONFIGURATION
# =================================================================
# CORS Configuration
CORS_ORIGIN="http://localhost:3500"
CORS_CREDENTIALS=true

# Session Configuration
SESSION_SECRET="your-session-secret"
SESSION_MAX_AGE=86400000

# =================================================================
# FEATURE FLAGS
# =================================================================
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_ANALYTICS=true
ENABLE_EMAIL_AUTOMATION=true
ENABLE_BULK_OPERATIONS=true

# =================================================================
# ADMIN CONFIGURATION
# =================================================================
# Default admin user (created on first run)
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="change-this-password"
ADMIN_NAME="System Administrator"

# =================================================================
# COMMERCIAL USE
# =================================================================
# License information (do not modify)
LICENSE=MIT
COPYRIGHT="Copyright (c) 2024 Muhammad Ismail"
ATTRIBUTION_REQUIRED=true
COMMERCIAL_USE_ALLOWED=true

# =================================================================
# CONTACT INFORMATION
# =================================================================
FOUNDER_NAME="Muhammad Ismail"
FOUNDER_EMAIL="ismail@aimnovo.com"
COMPANY_WEBSITE="https://aimnovo.com"
AI_PLATFORM="https://aimnexus.ai"

# =================================================================
# NOTES
# =================================================================
