{
  "name": "@email-system/db",
  "version": "1.0.0",
  "description": "Database utilities and Prisma schema for the AI Email Marketing System",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.2.0",
    "bcryptjs": "^2.4.3",
    "nanoid": "^4.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "prisma": "^5.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "eslint": "^8.45.0"
  }
}