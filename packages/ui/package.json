{
  "name": "@email-system/ui",
  "version": "1.0.0",
  "description": "Shared UI components for the AI Email Marketing System",
  "author": {
    "name": "Muhammad Ismail",
    "email": "ismail@aimnovo.com",
    "url": "https://aimnovo.com"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "echo 'No tests for UI package'",
    "test:watch": "echo 'No tests for UI package'",
    "test:coverage": "echo 'No tests for UI package'",
    "test:report": "echo 'No tests for UI package'",
    "docs:api": "echo 'No API docs for UI package'",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "validate:fix": "npm run type-check && npm run lint:fix && npm run format"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.10.2",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "next": ">=13.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  }
}
