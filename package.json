{
  "name": "ai-email-marketing-system",
  "version": "1.0.0",
  "description": "AI-powered email marketing automation platform",
  "author": {
    "name": "Muhammad Ismail",
    "email": "quaid@live.com",
    "url": "https://aimnovo.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "Contact quaid@live.com for repository access"
  },
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio",
    "start": "turbo run start",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "validate:fix": "npm run type-check && npm run lint:fix && npm run format",
    "pre-commit": "lint-staged",
    "setup:git": "./scripts/setup-git.sh",
    "prepare": "husky"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.0.0",
    "turbo": "^1.10.7",
    "typescript": "^5.1.6"
  },
  "packageManager": "npm@9.8.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "resolve.exports": "^2.0.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
