{
  "name": "ai-email-marketing-system",
  "version": "1.0.0",
  "description": "AI-powered email marketing automation platform",
  "author": {
    "name": "Muhammad Ismail",
    "email": "ismail@aimnovo.com",
    "url": "https://aimnovo.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "Contact ismail@aimnovo.com for repository access"
  },
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "test:report": "turbo run test:report",
    "docs:api": "turbo run docs:api",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio",
    "start": "turbo run start",
    "start:web": "turbo run start --filter=web",
    "start:api": "turbo run start --filter=api",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "validate:fix": "npm run type-check && npm run lint:fix && npm run format",
    "pre-commit": "lint-staged && npm run validate",
    "setup:git": "./scripts/setup-git.sh",
    "prepare": "husky",
    "check:pipelines": "node scripts/check-pipelines.js",
    "check:pipelines:shell": "bash scripts/check-pipelines.sh"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@turbo/gen": "^1.10.7",
    "@types/compression": "^1.8.1",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "commander": "^13.1.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest": "^29.6.4",
    "jest-coverage-badges": "^1.0.0",
    "jest-environment-jsdom": "^29.6.4",
    "lint-staged": "^15.5.2",
    "prettier": "^3.0.0",
    "turbo": "^1.10.7",
    "typescript": "^5.1.6"
  },
  "packageManager": "npm@9.8.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@sendgrid/mail": "8.1.5",
    "nanoid": "5.1.5",
    "resolve.exports": "^2.0.3"
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx}": [
      "prettier --write"
    ],
    "packages/**/*.{ts,tsx}": [
      "prettier --write"
    ],
    "docs/**/*.{js,jsx}": [
      "eslint --fix --no-eslintrc --config .eslintrc.simple.js",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": "prettier --write"
  }
}
